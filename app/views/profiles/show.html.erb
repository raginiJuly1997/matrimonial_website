<h1 class="text-center">Profile Details </h1>
 

<div class="text-center">
<%= image_tag @profile.image, :align=> "middle", :size =>"100", class: "rounded-circle " %>
</div>
<div class= "text-center">
    <h1><%= @profile.first_name+" "+@profile.last_name  %></h1>
</div> 
<div class="container">
<h3>Profile</h3>
 <table>
  <thead>
    <tr>
      	<th scope="col">First Name</th>
      	<th scope="col">Last Name</th>
		    <th scope="col"> Gender</th>
		    <th scope="col"> Date_of_birth</th> 
    </tr>
  </thead>
  <tbody>
    <tr>
	  <td><%= @profile.first_name %></td>  
		<td><%=@profile.last_name %></td>
		<td><%= @profile.gender %></td>
		<td><%= @profile.date_of_birth %></td>
    </tr>
   
  </tbody>
</table>
</div>

<div class="container">
<h3>Personal</h3>
<table>
  <thead>
    <tr>
        <th scope="col">Nationality</th>
       <th scope="col"> Marital Status</th>
        <th scope="col">Religion</th>
        <th scope="col"> Father Name</th>
        <th scope="col">Mother Name</th>

    </tr>
  </thead>
  <tbody>
    <tr>
        <td><%= @profile.nationality %></td>
        <td><%= @profile.marital_status %></td>
        <td><%= @profile.religion %></td>
        <td><%= @profile.father_name %></td>
        <td><%= @profile.mother_name%></td>
    
    </tr>
  </tbody>
</table>
</div>

<div class="container">
<h3>Address</h3>
<table>
  <thead>
    <tr>
        <th scope="col">State</th>
        <th scope="col">City</th>
        <th scope="col">address</th>
       <th scope="col"> Pincode</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        
        <td><%= @profile.state %></td>
        <td><%= @profile.city%></td>
        <td><%= @profile.address %></td>
        <td><%= @profile.pincode %></td>
    
    </tr>
  </tbody>
</table>
</div>

<div class="container">
<h3>Education & Work</h3>
<table>
  <thead>
    <tr>
        <th scope="col">College name</th>
        <th scope="col">Job</th>
        <th scope="col">Height</th>
        <th scope="col">Income</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <td><%= @profile.college_name %></td>
        <td><%= @profile.job %></td>
        <td><%= @profile.height %></td>
        <td><%= @profile.income %></td>
    </tr>
  </tbody>
</table>
</div>

<div class="container">
<h3>About & Hobbies</h3>
<table>
  <thead>
    <tr>
        <th scope="col">Hobbies</th>
        <th scope="col">About_yourself</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <td><%= @profile.hobbies %></td>
        <td><%= @profile.about_yourself %></td>
    </tr>
  </tbody>
</table>
</div>
<div class= "text-center">
<%= link_to "Destroy",profile_path(@profile), :method => :delete, class:'btn btn-danger', data: {
                            turbo_method: :delete,
                            turbo_confirm: "Are you sure?"
                          } %>
<%= link_to " Back", profiles_path,class: "btn btn-warning"%>
</div>





 
